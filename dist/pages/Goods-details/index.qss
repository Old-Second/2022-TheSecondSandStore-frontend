.top{
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    margin-bottom: 20rpx;
}
 
.header{
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-align-items: center;
        -ms-flex-align: center;
            align-items: center;
}
 
.avater Image{
     display:inline-block;
     width: 100rpx;
     height: 100rpx;
     border-radius: 100rpx;
     margin-left: 30rpx;
 }
 
.header .name{
     display:inline-block;
     font-size: 35rpx;
     margin-left: 40rpx;
     color: black;
 }
 
.header .time{
     display: inline-block;
     font-size: 25rpx;
     margin-left: 20rpx;
     color: rgb(98, 98, 98);
 }
 
